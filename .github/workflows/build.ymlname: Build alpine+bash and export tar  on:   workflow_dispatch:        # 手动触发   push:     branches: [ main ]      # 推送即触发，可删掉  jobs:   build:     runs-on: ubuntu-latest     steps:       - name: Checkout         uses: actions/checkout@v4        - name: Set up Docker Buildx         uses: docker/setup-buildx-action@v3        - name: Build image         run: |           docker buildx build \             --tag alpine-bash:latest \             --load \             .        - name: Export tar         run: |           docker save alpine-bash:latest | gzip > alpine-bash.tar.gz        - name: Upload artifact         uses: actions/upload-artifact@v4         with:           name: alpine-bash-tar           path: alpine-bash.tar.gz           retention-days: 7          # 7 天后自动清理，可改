name: Build alpine+bash and export tar

on:
  workflow_dispatch:        # 手动触发

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Build image
        run: |
          docker buildx build \
            --tag alpine-bash:latest \
            --load \
            .

      - name: Export tar
        run: |
          docker save alpine-bash:latest | gzip > alpine-bash.tar.gz

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: alpine-bash-tar
          path: alpine-bash.tar.gz
          retention-days: 7          # 7 天后自动清理，可改
